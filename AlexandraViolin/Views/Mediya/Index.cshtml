@{
    ViewBag.Title = "Three Column Portfolio";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Медиа
                @*<small>Showcase Your Work</small>*@
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Главная", "Index", "Home")
                </li>
                <li class="active">Медиа</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            @*<h2 class="page-header">Media</h2>*@
            <ul class="nav nav-tabs" id="mediaTab">
                <li class="active">
                    <a data-toggle="tab" href="#media-audio">Аудио</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#media-video">Видео</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#media-photo">Фото</a>
                </li>
            </ul>
            <div class="tab-content" id="mediaTabContent">
                <div id="media-audio" class="tab-pane fade in active">
                    @Html.Partial("Audio")
                </div>
                <div id="media-video" class="tab-pane fade">
                    @Html.Partial("Video")
                </div>
                <div id="media-photo" class="tab-pane fade">
                    <!-- /.row -->
                    <div class="row">
                        <div class="col-md-4 portfolio-item">
                            <a href="@Url.Action("Photo","Mediya", new { album = "Studio" })">
                                <img src="../img/Studio/Studio_12.jpg" class="img-responsive">
                            </a>
                            @*<h3>
                                @Html.ActionLink("Project Name", "SingleItem", "Media")
                            </h3>*@
                            <h3>Студийный</h3>
                        </div>
                        <div class="col-md-4 portfolio-item">
                            <a href="@Url.Action("Photo","Mediya", new { album = "Concert" })">
                                <img src="../img/Concert/Concert_3.jpg" class="img-responsive">
                            </a>
                            @*<h3>
                                @Html.ActionLink("Project Name", "SingleItem", "Media")
                            </h3>*@
                            <h3>Концертный</h3>
                        </div>
                    </div> 
